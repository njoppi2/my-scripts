#!/usr/bin/bash

# usage example: for dir in $(ls); do /usr/local/bin/myScripts/createImageGrids "$(pwd)/${dir}"; done

# $1 is the first argument, which should be an existing path

NAME=$(echo $1 | grep -o  '[^\/]\+$')
rm $1/$NAME.jpg
montage $1/2*--*.jpg -geometry +1+1 -tile 2x -resize 602x340 $1/$NAME.jpg

/usr/local/bin/myScripts/insertPromptsIntoGrid $1

